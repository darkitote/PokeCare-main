# ðŸ”¹ ConstrucciÃ³n del frontend con Vite
FROM node:18-alpine AS builder  
WORKDIR /app  

# ðŸ”¹ Copiar archivos fuente  
COPY package.json package-lock.json ./  
RUN npm install  

# ðŸ”¹ Copiar el cÃ³digo fuente y compilar  
COPY . .  
RUN npm run build  

# ðŸ”¹ Servir archivos con Nginx  
FROM nginx:alpine  
COPY --from=builder /app/dist /usr/share/nginx/html  

EXPOSE 80  
CMD ["nginx", "-g", "daemon off;"]
